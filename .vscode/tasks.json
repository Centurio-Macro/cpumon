{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-11 build active file",
            "command": "/usr/bin/gcc-11",
            "args": [
                "-fdiagnostics-color=always",
                "-fverbose-asm",
                "-masm=intel",
               
                "-g",
                "${file}",
                "${fileDirname}/cpumonlib.c",
                "${fileDirname}/cpumonlib.h",
                "${fileDirname}/guilib.c",
                "${fileDirname}/guilib.h",
                "-lm",
                "-lncurses",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}